<h1>Weather Observations</h1>
<table>
  <tr>
    <th>Location</th>
    <th>Temperature</th>
    <th>Wind Speed</th>
    <th>Wind Direction</th>
    <th>Rainfall (last hour)</th>
    <th>Humidity</th>
    <th>Pressure</th>
  </tr>
  <% @weather_observations.each do |observation| %>
    <tr>
      <td><%= observation.location %></td>
      <td><%= observation.temperature %> Â°</td>
      <td><%= observation.wind_speed %> km/h</td>
      <td><%= observation.wind_direction %> (last hour)</td>
      <td><%= observation.rainfall %> mm</td>
      <td><%= observation.humidity %> %</td>
      <td><%= observation.pressure %> pa</td>
    </tr>
  <% end %>
</table>

